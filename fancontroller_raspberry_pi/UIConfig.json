{
  "page": {
    "label": "Fan Controller - Raspberry Pi",
    "title": "Fan Controller",
    "description": "PWM 50Hz control on GPIO 14 (Pin 8) - Temperature based duty cycle - BCM numbering"
  },
  "sections": [
    {
      "id": "settings_section",
      "element": "section",
      "label": "Basic Settings",
      "icon": "fa fa-cog",
      "onSave": {
        "type": "controller",
        "endpoint": "fancontroller/setUiConfig"
      },
      "content": [
        {
          "id": "enabled",
          "element": "switch",
          "label": "Enable Fan Control",
          "value": false,
          "onClick": {
            "type": "controller",
            "endpoint": "fancontroller/setUiConfig"
          }
        },
        {
          "id": "gpio_pin",
          "element": "input",
          "label": "GPIO Pin Number",
          "type": "number",
          "attributes": {
            "min": 14,
            "max": 14,
            "readonly": true
          },
          "value": 14,
          "description": "FIXED: GPIO 14 = Physical Pin 8 on Raspberry Pi (BCM numbering)"
        },
        {
          "id": "min_temp",
          "element": "input",
          "label": "Minimum Temperature (Â°C)",
          "type": "number",
          "attributes": {
            "min": 15,
            "max": 40
          },
          "value": 20,
          "description": "Fan starts at 20Â°C (0% PWM duty cycle)"
        },
        {
          "id": "max_temp",
          "element": "input",
          "label": "Maximum Temperature (Â°C)",
          "type": "number",
          "attributes": {
            "min": 30,
            "max": 70
          },
          "value": 50,
          "description": "Full speed at 50Â°C (100% PWM duty cycle)"
        },
        {
          "id": "check_interval",
          "element": "input",
          "label": "Check Interval (seconds)",
          "type": "number",
          "attributes": {
            "min": 5,
            "max": 60
          },
          "value": 10,
          "description": "How often to check temperature (5-60 seconds)"
        },
        {
          "id": "use_pwm",
          "element": "switch",
          "label": "Enable PWM Speed Control",
          "value": true,
          "description": "PWM 50Hz frequency - Variable speed control based on temperature"
        }
      ]
    },
    {
      "id": "manual_section",
      "element": "section",
      "label": "Manual Control",
      "icon": "fa fa-sliders",
      "content": [
        {
          "id": "fan_speed",
          "element": "slider",
          "label": "Fan Speed (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "value": 0,
          "attributes": {
            "showValue": true
          },
          "onChange": {
            "type": "controller",
            "endpoint": "fancontroller/setFanSpeed"
          },
          "description": "Manual PWM duty cycle control (overrides automatic control)"
        }
      ]
    },
    {
      "id": "status_section",
      "element": "section",
      "label": "System Status - Raspberry Pi",
      "icon": "fa fa-info-circle",
      "content": [
        {
          "id": "current_temp",
          "element": "display",
          "label": "Current Temperature",
          "value": "Unknown"
        },
        {
          "id": "current_speed",
          "element": "display",
          "label": "Current Fan Speed",
          "value": "0% (PWM)"
        },
        {
          "id": "gpio_info",
          "element": "display",
          "label": "GPIO Configuration",
          "value": "GPIO 14 - Physical Pin 8 (BCM)"
        },
        {
          "id": "connection_info",
          "element": "display",
          "label": "Connection Guide",
          "value": "Fan+: Pin 8, Fan-: Pin 9(GND)"
        },
        {
          "id": "pwm_info",
          "element": "display",
          "label": "PWM Mode",
          "value": "PWM 50Hz - Hardware PWM"
        }
      ]
    },
    {
      "id": "compatibility_section",
      "element": "section",
      "label": "Compatibility Information",
      "icon": "fa fa-check-circle",
      "content": [
        {
          "id": "compatibility_info",
          "element": "display",
          "label": "Status",
          "value": "ðŸ”´ DISABLED"
        },
        {
          "id": "conflict_check",
          "element": "display",
          "label": "Conflict Status",
          "value": "No conflicts detected"
        },
        {
          "id": "gpio_safety",
          "element": "display",
          "label": "GPIO Safety",
          "value": "GPIO 14 (Pin 8) is safe for Raspberry Pi"
        },
        {
          "id": "temperature_info",
          "element": "display",
          "label": "PWM Temperature Range",
          "value": "20Â°C (0%) to 50Â°C (100%) duty cycle"
        }
      ]
    }
  ]
}