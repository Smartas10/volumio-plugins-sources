{
  "page": {
    "label": "Fan Controller - Orange Pi PC",
    "title": "Fan Controller",
    "description": "Safe fan control on GPIO 228 (Physical Pin 8) - No conflicts with other plugins"
  },
  "sections": [
    {
      "id": "settings_section",
      "element": "section",
      "label": "Basic Settings",
      "icon": "fa fa-cog",
      "onSave": {
        "type": "controller",
        "endpoint": "fancontroller/setUiConfig"
      },
      "content": [
        {
          "id": "enabled",
          "element": "switch",
          "label": "Enable Fan Control",
          "value": false,
          "onClick": {
            "type": "controller",
            "endpoint": "fancontroller/setUiConfig"
          }
        },
        {
          "id": "gpio_pin",
          "element": "input",
          "label": "GPIO Pin Number",
          "type": "number",
          "attributes": {
            "min": 228,
            "max": 228,
            "readonly": true
          },
          "value": 228,
          "description": "FIXED: GPIO 228 = Physical Pin 8 (SAFE - No conflicts with other plugins)"
        },
        {
          "id": "min_temp",
          "element": "input",
          "label": "Minimum Temperature (°C)",
          "type": "number",
          "attributes": {
            "min": 35,
            "max": 60
          },
          "value": 45,
          "description": "Fan turns on at this temperature"
        },
        {
          "id": "max_temp",
          "element": "input",
          "label": "Maximum Temperature (°C)",
          "type": "number",
          "attributes": {
            "min": 50,
            "max": 80
          },
          "value": 65,
          "description": "Fan runs at full speed at this temperature"
        },
        {
          "id": "check_interval",
          "element": "input",
          "label": "Check Interval (seconds)",
          "type": "number",
          "attributes": {
            "min": 5,
            "max": 60
          },
          "value": 10,
          "description": "How often to check temperature (5-60 seconds)"
        },
        {
          "id": "use_pwm",
          "element": "switch",
          "label": "Enable PWM Speed Control",
          "value": false,
          "description": "EXPERIMENTAL: Use PWM for variable speed control"
        }
      ]
    },
    {
      "id": "manual_section",
      "element": "section",
      "label": "Manual Control",
      "icon": "fa fa-sliders",
      "content": [
        {
          "id": "fan_speed",
          "element": "slider",
          "label": "Fan Speed (%)",
          "min": 0,
          "max": 100,
          "step": 10,
          "value": 0,
          "attributes": {
            "showValue": true
          },
          "onChange": {
            "type": "controller",
            "endpoint": "fancontroller/setFanSpeed"
          },
          "description": "Manual fan speed control (overrides automatic control)"
        }
      ]
    },
    {
      "id": "status_section",
      "element": "section",
      "label": "System Status - Orange Pi PC",
      "icon": "fa fa-info-circle",
      "content": [
        {
          "id": "current_temp",
          "element": "display",
          "label": "Current Temperature",
          "value": "Unknown"
        },
        {
          "id": "current_speed",
          "element": "display",
          "label": "Current Fan Speed",
          "value": "0%"
        },
        {
          "id": "gpio_info",
          "element": "display",
          "label": "GPIO Configuration",
          "value": "GPIO 228 - Physical Pin 8 (SAFE)"
        },
        {
          "id": "connection_info",
          "element": "display",
          "label": "Connection Guide",
          "value": "Fan+: Pin 8, Fan-: Pin 9(GND)"
        }
      ]
    },
    {
      "id": "compatibility_section",
      "element": "section",
      "label": "Compatibility Information",
      "icon": "fa fa-check-circle",
      "content": [
        {
          "id": "compatibility_info",
          "element": "display",
          "label": "Plugin Type",
          "value": "system_controller (No hardware conflicts)"
        },
        {
          "id": "conflict_check",
          "element": "display",
          "label": "Conflict Status",
          "value": "No known conflicts detected"
        },
        {
          "id": "gpio_safety",
          "element": "display",
          "label": "GPIO Safety",
          "value": "GPIO 228 (Pin 8) is safe and conflict-free"
        }
      ]
    }
  ]
}